(deflisten workspace "scripts/workspace")

(defwidget bar []
  (centerbox :orientation "h"
    (workspaces)
    (music)
    (sidestuff)))

(defwidget sidestuff []
  (box :class "sidestuff" :orientation "h" :space-evenly false :halign "end"
    (volume :label "ğŸ”Š"
            :value volume
            :onchange "pactl set-sink-volume @DEFAULT_SINK@ {}%")
    (battery)
    (wifi)
    time))


(defwidget workspaces []
  (literal :content workspace))



(defwidget music []
  (box :class "music"
       :orientation "h"
       :space-evenly false
       :halign "center"
    {music != "" ? "ğŸµ${music}" : ""}))


(defwidget volume [label value onchange]
  (box :orientation "h"
       :class "volume"
       :space-evenly false
    (box :class "label" label)
    (scale :min 0
           :max 101
           :active {onchange != ""}
           :value value
           :onchange onchange)))
