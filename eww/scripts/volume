#!/bin/bash

MUTE=$(pactl get-sink-mute @DEFAULT_SINK@)

volume() {
pactl get-sink-volume @DEFAULT_SINK@ | awk '{print $5}' | tr -d '%'

}


sclass() {
if [ "$MUTE" = "Mute: no" ]; then
    echo "volume"
else
    echo "mvolume"
fi

}

class() {
if [ "$MUTE" = "Mute: no" ]; then
    echo "unmuted"
else
    echo "muted"
fi

}

icon () {
if [ "$MUTE" = "Mute: no" ]; then
    echo "󰕾"
else
    echo "󰖁"
fi
}

if [[ "$1" == "--class" ]]; then
	class
elif [[ "$1" == "--icon" ]]; then
	icon
elif [[ "$1" == "--volume" ]]; then
    volume
elif [[ "$1" == "--sclass" ]]; then
	sclass
fi
